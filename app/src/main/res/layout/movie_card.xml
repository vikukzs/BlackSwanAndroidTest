<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:srcCompat="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/poster_image" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/poster_image"
            android:layout_margin="10dp">

            <TextView
                android:text="Title of Movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleTextView"
                android:layout_alignParentTop="true"
                 />

            <TextView
                android:text="Genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/genresTextView"
                android:layout_below="@+id/titleTextView"
                android:maxLines="1"
                android:ellipsize="end"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/ic_star_black_18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/star_image" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/releaseTextView"
                android:layout_alignBaseline="@+id/genresTextView"
                android:layout_alignBottom="@+id/genresTextView"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="7.9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingTextView"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/star_image" />

            <TextView
                android:text="summary summary summary summary summary summary summary "
                android:layout_width="wrap_content"
                android:id="@+id/summaryTextView"
                android:layout_below="@+id/genresTextView"
                android:layout_alignParentEnd="true"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineColor"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/summaryTextView"
                android:layout_above="@+id/moreTextView"

                />

            <TextView
                android:text="More Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moreTextView"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>