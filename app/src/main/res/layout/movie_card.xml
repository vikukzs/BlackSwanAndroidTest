<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:srcCompat="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView" />

        <TextView
            android:text="summary summary summary summary summary summary summary "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/genresTextView"
            android:layout_marginTop="17dp"
            android:id="@+id/summaryTextView"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:text="Title of Movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:text="Genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/genresTextView"
            android:layout_below="@+id/titleTextView"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/releaseTextView"
            android:layout_alignBaseline="@+id/genresTextView"
            android:layout_alignBottom="@+id/genresTextView"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="7.9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="11dp" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>